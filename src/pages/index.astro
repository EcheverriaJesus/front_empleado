---
import Layout from '../layouts/Layout.astro';
import AgregarEmpleado from '../services/crear_empleado' 
import StatusResponse from '../services/salud_api'
---

<Layout title="Ejercicio Gs.">
	<main class="w-full">
		<h1 class="text-white text-3xl font-bold font-mono text-center">EJERCICIO GS</h1>
		<h1 class="text-yellow-400 text-2xl font-semibold font-mono text-center pb-4">Alta de empleados</h1>
		
		<div class="w-full bg-white flex justify-center items-center flex-col shadow-xl rounded-2xl border border-slate-500">
			<header class="px-4 py-4 border-b border-slate-300 w-full"></header>
			<div class="w-full lg:w-1/2 p-3 flex justify-center flex-col items-center gap-3">
				<h2 class="font-semibold text-xl">Registrar empleado</h2>
				<div class="w-full">
					<AgregarEmpleado client:visible/>
				</div>
			</div>
		</div>
	</main>
</Layout>
